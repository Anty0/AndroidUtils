<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/recycler_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"><!--TODO: fix working if empty view is showed-->

        <eu.codetopic.utils.list.recyclerView.utils.EmptyRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/empty_view_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>