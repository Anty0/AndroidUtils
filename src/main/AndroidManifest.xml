<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.codetopic.utils">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:supportsRtl="false">

        <activity android:name=".log.issue.IssuesActivity"
            android:label="@string/activity_label_logged_issues"
            android:theme="@style/UtilsTheme.NoActionBar" />
        <activity
            android:name=".log.issue.IssueInfoActivity"
            android:label="@string/activity_label_issue_info"
            android:excludeFromRecents="true"
            android:theme="@style/UtilsTheme.Dialog.NoActionBar" />

        <service
            android:name=".ui.container.adapter.widget.CustomItemWidgetAdapterService"
            android:enabled="true"
            android:exported="false"
            android:label="WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <receiver
            android:name=".notifications.PostNotificationCanceler"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".notifications.manager2.receiver.internal.BootRefreshReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".notifications.manager2.receiver.internal.CommonNotifyDeleteReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.internal.CommonPersistentNotifyDeleteReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.internal.SummaryNotifyDeleteReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".notifications.manager2.receiver.internal.CommonNotifyLaunchReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.internal.CommonPersistentNotifyLaunchReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.internal.SummaryNotifyLaunchReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqRefreshReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqNotifyReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqNotifyAllReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqCancelReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqCancelAllIdsReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />
        <receiver
            android:name=".notifications.manager2.receiver.RqCancelAllReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":notify" />

        <provider
            android:name=".ids.IdentifiersProvider"
            android:authorities="eu.codetopic.utils.ids.data"
            android:exported="false"
            android:process=":providers" />
        <provider
            android:name=".notifications.manager2.save.NotifyProvider"
            android:authorities="eu.codetopic.utils.notifications.manager.data"
            android:exported="false"
            android:process=":providers" />
    </application>

</manifest>
